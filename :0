package main

import (
	"fmt"
	"math/rand"
)

func printTentativa(Tudo [][]int) {
	for i, tentativa := range Tudo {
		fmt.Printf("Jogada %d: %v\n", i+1, tentativa)
	}
}


func main() {
	fmt.Println("Este é o jogo da adivinhação. Seja bem-vindo.")
  var Tudo [][]int
	var num int
	var repetir string

	for {
    random := rand.Intn(100) + 1
    var tentativa []int
    for {
		fmt.Println("Insira um número de 1 a 100: ")
		fmt.Scanln(&num)
    tentativa = append(tentativa, num)

		if num == random {
				fmt.Printf("Parabéns, você alcançou o número em %d tentativas.\n", len(tentativa))
				break
			} else if num < random {
				fmt.Printf("O número é maior que %d.\n", num)
			} else {
				fmt.Printf("O número é menor que %d.\n", num)
			}
    }

    fmt.Println("Você gostaria de tentar novamente? (s/n) ")
			fmt.Scan(&repetir)

			if repetir == "s" {
				fmt.Println("Nova partida!")

			} else if repetir == "n" {
				fmt.Println("Fim de Jogo.")
        break
        }
    }

	fmt.Println("Total de tentativas:")
  printTentativa(Tudo)

			}
