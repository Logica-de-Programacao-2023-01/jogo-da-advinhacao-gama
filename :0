package main

import (
	"fmt"
	"math/rand"
)

func numeroAleatório() int {
	random := rand.Intn(100) + 1
	return random

}

func main() {
	fmt.Println("Este é o jogo da adivinhação. Seja bem-vindo.")

	var num int
	random := numeroAleatório()
	var partidas int
	tentativa := 1
	var repetir string

	for num != random {
		fmt.Println("Insira um número de 1 a 100: ")
		fmt.Scanln(&num)

		if num > random {
			fmt.Printf("O número é menor que %d.\n", num)
			tentativa++
		} else if num < random {
			fmt.Printf("O número é maior que %d.\n", num)
			tentativa++
		} else {
			fmt.Println("Parabéns, você alcançou o número! :) Você gostaria de tentar novamente? (s/n) ")
			fmt.Scan(&repetir)
			partidas++

			if repetir == "s" {
				fmt.Println("Nova partida!")
				tentativa = 1
				random = numeroAleatório()

			} else if repetir == "n" {
				fmt.Println("Fim de Jogo.")

				for i := 0; i < partidas; i++ {
					fmt.Printf("Você utilizou %d tentativas na %d partida. ", tentativa, partidas)
				}
				break

			}

		}

	}
	fmt.Println(tentativa)
}
